def worksheet(text):
    print ("Please enter the article/story you want to use.")
    #Enter the text you want to use
    text = input() 
    #split the article into sentences
    #creates a list
    #split the list into each line
    lined_sentences = text.split(".",\n)
    gap_sentences = lined_sentences.replace("He","he","I":"_____")
    	return gap_sentences
